<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <title>Todo List - Gradient UI</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css" />
    <style>
        body {
            background: #000000;
            font-family: 'Poppins', sans-serif;
            color: white;
            overflow-x: hidden;
            position: relative;
        }
        .todo-wrapper {
            max-width: 700px;
            margin: 30px auto;
            padding: 30px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            box-shadow: 0px 10px 30px rgba(255, 255, 255, 0.2);
            position: relative;
            z-index: 2;
            backdrop-filter: blur(10px);
        }
        h1 {
            font-weight: 600;
            color: #ffffff;
        }
        .emoji {
            position: absolute;
            font-size: 2rem;
            pointer-events: none;
            z-index: 1;
            user-select: none;
            opacity: 1;
            animation: fall linear infinite;
        }
        @keyframes fall {
            from {
                transform: translateY(0);
                opacity: 1;
            }
            to {
                transform: translateY(150vh);
                opacity: 0;
            }
        }
        .card {
            background-color: rgba(0, 0, 0, 0.5) !important;
            border: none;
        }
        .modal-content {
            background: #222;
            opacity: 1 !important;
        }
        .modal-header, .modal-footer {
            background: rgba(255, 255, 255, 0.1);
            border: none;
        }
        .modal-title {
            color: white;
        }
        .form-label, .form-control {
            color: white;
            background-color: #333;
            border: 1px solid #666;
        }
        .form-control:focus {
            background-color: #444;
            border-color: #007bff;
        }
        .deleted {
            text-decoration: line-through;
        }
    </style>
</head>
<body>
<div class="todo-wrapper">
    <h1 class="text-center mb-4">âœ¨To Do List âœ¨</h1>

    <div class="text-end mb-3">
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addTodoModal">+ Yeni GÃ¶rev</button>
    </div>

    <div class="mb-3">
        <select id="filterStatus" class="form-select">
            <option value="pending">ğŸš€ YapÄ±lacaklar ğŸš€</option>
            <option value="completed">ğŸ’« Tamamlananlar ğŸ’«</option>
            <option value="deleted">ğŸ›¸ Silinenler ğŸ›¸</option>
            <option value="all">ğŸª TÃ¼mÃ¼ ğŸª</option>
        </select>
    </div>

    <div id="todosContainer">
        <% if(todos && todos.length > 0) { %>
            <% todos.forEach(function(todo){ %>
                <div class="card mb-3" data-status="<%= todo.deleted ? 'deleted' : (todo.completed ? 'completed' : 'pending') %>">
                    <div class="card-body">
                        <div>
                            <h5 class="card-title <%= todo.deleted ? 'deleted' : (todo.completed ? 'completed' : '') %>">
                                ğŸ“ <%= todo.title ? todo.title : "GÃ¶rev Yok" %>
                                <% if(todo.completed && !todo.deleted) { %> âœ…âœ…âœ… <% } %>
                            </h5>
                            <p class="card-text <%= todo.deleted ? 'deleted' : (todo.completed ? 'completed' : '') %>">
                                ğŸ’¬ <%= todo.description ? todo.description : "Detay Yok" %>
                            </p>
                        </div>
                        <div class="todo-buttons">
                            <% if (!todo.deleted) { %>
                                <% if (!todo.completed) { %>
                                    <a href="/todos/<%= todo.id %>/complete" class="btn btn-success btn-sm">âœ… Tamamla</a>
                                <% } %>
                                <button type="button" class="btn btn-primary btn-sm editBtn"
                                        data-id="<%= todo.id %>"
                                        data-title="<%= todo.title %>"
                                        data-description="<%= todo.description %>">
                                    ğŸ“ DÃ¼zenle
                                </button>
                                <a href="/todos/<%= todo.id %>/delete" class="btn btn-danger btn-sm">âŒ Sil</a>
                            <% } else { %>
                                <a href="/todos/<%= todo.id %>/restore" class="btn btn-secondary btn-sm">â†©ï¸ Geri Al</a>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p class="text-center"></p>
        <% } %>
    </div>
</div>

<!-- Add Todo Modal -->
<div class="modal fade" id="addTodoModal" tabindex="-1" aria-labelledby="addTodoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form id="addTodoForm" class="modal-content" action="/todos/add" method="POST">
            <div class="modal-header">
                <h5 class="modal-title" id="addTodoModalLabel">Yeni GÃ¶rev Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="todoTitle" class="form-label">GÃ¶rev</label>
                    <input type="text" class="form-control" id="todoTitle" name="title" required />
                </div>
                <div class="mb-3">
                    <label for="todoDescription" class="form-label">Detay</label>
                    <textarea class="form-control" id="todoDescription" name="description"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="editTodoModal" tabindex="-1" aria-labelledby="editTodoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form id="editTodoForm" class="modal-content" method="POST">
            <!-- POST isteÄŸi kullanÄ±lacaÄŸÄ±ndan method override input'u kaldÄ±rÄ±ldÄ± -->
            <div class="modal-header">
                <h5 class="modal-title" id="editTodoModalLabel">GÃ¶revi DÃ¼zenle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="editTodoTitle" class="form-label">GÃ¶rev</label>
                    <input type="text" class="form-control" id="editTodoTitle" name="title" required />
                </div>
                <div class="mb-3">
                    <label for="editTodoDescription" class="form-label">Detay</label>
                    <textarea class="form-control" id="editTodoDescription" name="description"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </form>
    </div>
</div>

<script>
    function createParticles() {
        const objects = ["â­", "ğŸŒ™", "ğŸª", "ğŸŒ•", "â˜„ï¸"];
        const particleCount = 80;
        for (let i = 0; i < particleCount; i++) {
            let particle = document.createElement('span');
            particle.className = 'emoji';
            particle.innerHTML = objects[Math.floor(Math.random() * objects.length)];
            particle.style.left = Math.random() * 100 + 'vw';
            particle.style.fontSize = Math.random() * 15 + 5 + 'px';
            particle.style.top = (Math.random() * -200 - 50) + 'px';
            const animationDuration = Math.random() * 8 + 8;
            particle.style.animationDuration = animationDuration + 's';
            particle.style.animationDelay = Math.random() * 3 + 's';
            document.body.appendChild(particle);
        }
    }
    document.addEventListener('DOMContentLoaded', createParticles);
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        $('#filterStatus').change(function() {
            var selectedStatus = $(this).val();
            $('.card').each(function() {
                var cardStatus = $(this).data('status');
                if (selectedStatus === 'all' || cardStatus === selectedStatus) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
            // EÄŸer seÃ§ili kategori iÃ§in gÃ¶rÃ¼nÃ¼r gÃ¶rev kalmadÄ±ysa mesaj gÃ¶ster:
            var visibleCards = $('.card:visible').length;
            if(visibleCards === 0) {
                if($('#noTasksMessage').length === 0) {
                    $('#todosContainer').append('<p id="noTasksMessage" class="text-center"></p>');
                }
                var message = '';
                if(selectedStatus === 'pending') {
                    message = 'Verimli bir gÃ¼n.';
                } else if(selectedStatus === 'completed') {
                    message = 'Ã‡alÄ±ÅŸmaya devam !';
                } else if(selectedStatus === 'deleted') {
                    message = 'Her ÅŸey yolunda!';
                } else {
                    message = 'Planlamaya baÅŸlayalÄ±m!';
                }
                $('#noTasksMessage').text(message);
            } else {
                $('#noTasksMessage').remove();
            }
        });
        $('#filterStatus').trigger('change');
        $('.editBtn').on('click', function() {
            var id = $(this).data('id');
            var title = $(this).data('title');
            var description = $(this).data('description');
            $('#editTodoModal').find('#editTodoTitle').val(title);
            $('#editTodoModal').find('#editTodoDescription').val(description);
            $('#editTodoForm').attr('action', '/todos/' + id + '/update');
            $('#editTodoModal').modal('show');
        });
    });
</script>
</body>
</html>
